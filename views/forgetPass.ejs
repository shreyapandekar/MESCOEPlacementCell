<%-include('partials/header.ejs')%>
<head>
  <link rel="stylesheet" href="/css/loginRegister.css" />
</head>

<div class="main_container">
  <div class="sub_con sub1">
    <h1>Forget Password</h1>
    <div class="imgDiv">
      <img src="/images/logo.png" alt="Logo" class="logo" />
    </div>
  </div>
  <div class="sub_con sub2">
    <form action="/forgetPass" method="post" class="form">
      <div class="field">
        <label for="email">Email Address</label>
        <input
          type="text"
          name="email"
          placeholder="Username@gmail.com"
          required
        />
      </div>
      <div class="field">
        <label for="secQue">Secret Code</label>
        <input
          type="text"
          name="secQue"
          id=""
          placeholder="Enter Secret Code"
        />
      </div>
      <div class="submitBtn">
        <button type="submit">Check</button>
      </div>
      <div class="links">
        <span class="signup"> <a href="/register">Signup</a></span>
        <span class="forget"> <a href="/login">Login</a></span>
      </div>
    </form>
  </div>
</div>
<%-include('partials/footer')%>
