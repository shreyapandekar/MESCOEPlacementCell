<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Application Form</title>
    <link rel="stylesheet" href="/css/student_app.css" />
  </head>
  <body>
    <div class="container">
      <div class="apply_box">
        <h1>
          Students Application
          <span class="title_small"></span>
        </h1>
        <form action="">
          <div class="form_container">
            <div class="form_control">
              <label for="first_name"> First Name </label>
              <input
                id="first_name"
                name="first_name"
                placeholder="Enter First Name..."
              />
            </div>
            <div class="form_control">
              <label for="last_name"> Last Name </label>
              <input
                id="last_name"
                name="last_name"
                placeholder="Enter Last Name..."
              />
            </div>
            <div class="form_control">
              <label for="email"> Email </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Enter Email..."
              />
            </div>
            <div class="form_control">
              <label for="job_role"> Department </label>
              <select id="job_role" name="job_role">
                <option value="">Select Department</option>
                <option value="frontend">Computer </option>
                <option value="backend">Mechanical</option>
                <option value="full_stack">E&TC</option>
                <option value="ui_ux">AR</option>
              </select>
            </div>
            <div class="textarea_control">
              <label for="address"> Address </label>
              <textarea
                id="address"
                name="address"
                row="4"
                cols="50"
                placeholder="Enter Address"
              ></textarea>
            </div>
            <div class="form_control">
              <label for="city"> City </label>
              <input id="city" name="city" placeholder="Enter City Name..." />
            </div>
            <div class="form_control">
              <label for="pincode"> Pincode </label>
              <input
                type="number"
                id="pincode"
                name="pincode"
                placeholder="Enter Pincode Name..."
              />
            </div>
            <div class="form_control">
              <label for="date"> Date </label>
              <input value="2023-05-05" type="date" id="date" name="date" />
            </div>
            <div class="form_control">
              <label for="upload"> Upload Your CV </label>
              <input type="file" id="upload" name="upload" />
            </div>
            <div class="form_control">
              <label for="city"> Current CGPA </label>
              <input id="marks" name="marks" placeholder="Enter Your CGPA..." />
            </div>
          </div>
        </form>
          <div class="button_container">
            <label for="save"></label>
            <button type="save">save</button>
          </div>
          <div class="button_download">
            <a href="" download="student_app"><button type="">Download Form</button></a>
          </div>
      </div>
    </div>
  </body>
</html>
